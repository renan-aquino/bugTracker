@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

    <main class="login">
        <div class="sign-up-box">

            <div class="login-content">
                <div class="login-header">
                    <h1 class="login-logo"><span>Bug</span>Tracker</h1>
                </div>
                
                <div class="login-body">
                    <form asp-controller="Auth" asp-action="Register" method="post" class="sign-up-form">
                        <input type="text" placeholder="Nome">
                        <input type="text" placeholder="Sobrenome">
                        <div>
                            <input asp-for="Email" placeholder="Email">
                            <span asp-validation-for="Email"></span>
                        </div>
                        <input type="text" placeholder="Confirmar email">
                        <div>
                            <input asp-for="Senha" type="password" placeholder="Senha">
                            <span asp-validation-for="Senha"></span>
                        </div>
                        <div>
                            <input asp-for="ConfirmarSenha" type="password" placeholder="Confirmar senha">
                            <span asp-validation-for="ConfirmarSenha"></span>
                        </div>

                        <select name="" id="">
                            <option value="volvo">Desenvolvedor</option>
                            <option value="saab">Designer</option>
                        </select>
                        <button type="submit" class="login-button" value="Sign Up">Entrar</button>
                    </form>
                    <div class="login-options">
                        <p>Primeiro Acesso? <a href="">Criar conta</a></p>
                        <p>Entrar com uma conta <a href="">Demo</a></p>
                    </div>
                </div>

            </div>

            <div class="login-box-image">
            </div>
        </div>
    </main>
